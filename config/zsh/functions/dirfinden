# Directory FZF Navigator
usage() { echo "Usage: dirfinde [-e echo] dirA dirB ..."; return }

dirfinden () {
  local opt
  local OPTIND
  while getopts "he" opt; do
    case $opt in
      h)
        usage
        return 0
        ;;
      e)
        e=true
        ;;
      \?)
        usage
        return 1
        ;;
    esac
  done
  shift $(( OPTIND - 1 ))

  if [ $# -eq 0 ]; then
    usage
    return 1
  fi

  local selection=$(find $@ -mindepth 1 -maxdepth 1 -type d | \
    fzf --height 40% \
        --delimiter / --with-nth -1 \
        --border \
        --reverse \
        --preview 'inspect {}')

  if [[ $e ]]; then
    echo $selection
    return 0
  fi

  cd $selection
}

dirfinden "$@"
